<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetupActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.328"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="188dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:fontFamily="@font/poppins_semibold" android:background="@drawable/button_gradient"
            android:textColor="@color/background" android:stateListAnimator="@animator/button_state_list_animator"
            android:elevation="6dp"
            android:translationZ="4dp"
            android:outlineSpotShadowColor="@color/shadow"
            android:outlineAmbientShadowColor="@color/shadow"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Create Account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="120dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:fontFamily="@font/poppins_semibold" android:background="@drawable/button_white"
            android:textColor="@color/black" android:stateListAnimator="@animator/button_state_list_animator"
            android:elevation="6dp"
            android:translationZ="4dp"
            android:outlineSpotShadowColor="@color/shadow"
            android:outlineAmbientShadowColor="@color/shadow"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Terms &amp; Conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:background="@drawable/button_borderless" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/grey"
            android:fontFamily="@font/poppins_semibold" android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="13sp"/>

</android.support.constraint.ConstraintLayout>