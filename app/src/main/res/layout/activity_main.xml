<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/connectionText"
            android:layout_width="200sp"
            android:layout_height="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/connected"
            style="@style/Connection"
    />

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cycleImage"
            android:layout_width="250sp"
            android:layout_height="100sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/connectionText"
            android:src="@drawable/ic_logo_gradient"/>


    <android.support.constraint.ConstraintLayout
            android:id="@+id/sync"
            android:layout_width="300sp"
            android:layout_height="85sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_margin="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/reading_background"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintTop_toBottomOf="@+id/cycleImage"
            android:translationZ="6dp"
            android:elevation="12dp" android:layout_marginTop="8dp">


        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/syncTick"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/ic_sync_check"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/statusTitleText"
                android:layout_width="150sp"
                android:layout_height="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toEndOf="@+id/syncTick"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/syncStatus"
                style="@style/ReadingTitle"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/statusText"
                android:layout_width="150sp"
                android:layout_height="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="42dp"
                app:layout_constraintTop_toBottomOf="@+id/statusTitleText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:text="@string/upToDate"
                style="@style/ReadingMeasurement"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/airPollution"
            android:layout_width="300sp"
            android:layout_height="85sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_margin="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/reading_background"
            app:layout_constraintHorizontal_bias="0.487"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sync"
            android:translationZ="6dp"
            android:elevation="12dp">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/airPollutionIcon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/ic_air_pollution"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/airPollutionTitleText"
                android:layout_width="150sp"
                android:layout_height="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toEndOf="@+id/airPollutionIcon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/air"
                style="@style/ReadingTitle"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/airPollutionUnitText"
                android:layout_width="60sp"
                android:layout_height="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="102dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/airPollutionReadingText"
                app:layout_constraintVertical_bias="0.0"
                android:text="@string/air_measurement"
                style="@style/ReadingMeasurement"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/airPollutionReadingText"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintEnd_toStartOf="@+id/airPollutionUnitText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/airPollutionTitleText"
                app:layout_constraintVertical_bias="0.0"
                style="@style/Reading"
                android:text="40"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/noiseQuality"
            android:layout_width="300sp"
            android:layout_height="85sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_margin="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/reading_background"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/airPollution"
            app:layout_constraintHorizontal_bias="0.487"
            android:translationZ="6dp"
            android:elevation="12dp">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/noiseIcon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/ic_noise"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/noiseTitleText"
                android:layout_width="150sp"
                android:layout_height="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/noise"
                app:layout_constraintStart_toEndOf="@+id/noiseIcon"
                style="@style/ReadingTitle"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/noiseUnitText"
                android:layout_width="50sp"
                android:layout_height="30sp"
                app:layout_constraintTop_toTopOf="@+id/noiseReadingText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="112dp"
                android:text="@string/noise_measurement"
                style="@style/ReadingMeasurement"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/noiseReadingText"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintEnd_toStartOf="@+id/noiseUnitText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noiseTitleText"
                app:layout_constraintVertical_bias="0.0"
                style="@style/Reading"
                android:text="40"/>

    </android.support.constraint.ConstraintLayout>


    <be.rijckaert.tim.animatedvector.FloatingMusicActionButton
            android:id="@+id/playPauseButton"
            android:layout_width="55sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_gravity="bottom|center"
            app:mode="playToPause"
            android:layout_height="55sp"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/noiseQuality"
            android:translationZ="6dp"
            android:elevation="12dp"/>

</android.support.constraint.ConstraintLayout>